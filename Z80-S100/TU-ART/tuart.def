	SUBTTL Equates
;
;	************************************
;	* INTERRUPT TEST PROGRAM FOR TUART *
;	************************************
;
;	EQUATES
;
CONT	EQU	0	;CONTROL PORT
ESC	EQU	1BH
CR	EQU	0DH
LF	EQU	0AH
;
;	PORT ADDRESS DISPLACEMENTS
;
STAT	EQU	0	;STATUS PORT
DATA	EQU	1	;DATA PORT
BAUD	EQU	0	;BAUD RATE
COMM	EQU	2	;COMMAND PORT
PARAL	EQU	4	;PARALLEL PORT
INTA	EQU	3	;INTERRUPT ADDR
INTM	EQU	3	;INTERRUPT MASK
TM1	EQU	5	;TIMER 1
TM2	EQU	6
TM3	EQU	7
TM4	EQU	8
TM5	EQU	9	;TIMER 5
;
	SUBTTL Macros
;
;	*********************
;	* MACRO DEFINITIONS *
;	*********************
;
PMESS	MACRO	#1
	PUSH	HL
	LD	HL,#1
	CALL	PSTRING
	POP	HL
	MEND
;
PSCR	MACRO	#1
	PUSH	HL
	LD	HL,#1
	CALL	PSCREEN
	POP	HL
	MEND
;
CRSR	MACRO	#LINE,#COLUMN
	PUSH	DE
	LD	D,#LINE
	LD	E,#COLUMN
	CALL	POSC
	POP	DE
	MEND
;
CLL	MACRO	#1
	CRSR	#1,1
	PMESS	BLL
	MEND
;
